{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		},
		"color": {
			"palette": [
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#2563eb"
				},
				{
					"name": "Primary Dark",
					"slug": "primary-dark",
					"color": "#1d4ed8"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#64748b"
				},
				{
					"name": "Accent",
					"slug": "accent",
					"color": "#f59e0b"
				},
				{
					"name": "Success",
					"slug": "success",
					"color": "#10b981"
				},
				{
					"name": "Warning",
					"slug": "warning",
					"color": "#f59e0b"
				},
				{
					"name": "Danger",
					"slug": "danger",
					"color": "#ef4444"
				},
				{
					"name": "Text",
					"slug": "text",
					"color": "#1a1a1a"
				},
				{
					"name": "Text Light",
					"slug": "text-light",
					"color": "#64748b"
				},
				{
					"name": "Background",
					"slug": "background",
					"color": "#ffffff"
				},
				{
					"name": "Background Secondary",
					"slug": "background-secondary",
					"color": "#f8fafc"
				},
				{
					"name": "Border",
					"slug": "border",
					"color": "#e2e8f0"
				}
			],
			"gradients": [
				{
					"name": "Primary Gradient",
					"slug": "primary-gradient",
					"gradient": "linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%)"
				},
				{
					"name": "Accent Gradient",
					"slug": "accent-gradient",
					"gradient": "linear-gradient(135deg, #f59e0b 0%, #d97706 100%)"
				},
				{
					"name": "Dark Gradient",
					"slug": "dark-gradient",
					"gradient": "linear-gradient(135deg, #1e293b 0%, #0f172a 100%)"
				}
			],
			"duotone": [
				{
					"name": "Primary Duotone",
					"slug": "primary-duotone",
					"colors": ["#1d4ed8", "#93c5fd"]
				},
				{
					"name": "Grayscale",
					"slug": "grayscale",
					"colors": ["#1a1a1a", "#f8fafc"]
				}
			],
			"defaultDuotone": false,
			"defaultGradients": true,
			"defaultPalette": false,
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"link": true
		},
		"typography": {
			"fluid": true,
			"fontFamilies": [
				{
					"name": "System Sans",
					"slug": "system-sans",
					"fontFamily": "'Noto Sans JP', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
				},
				{
					"name": "Serif",
					"slug": "serif",
					"fontFamily": "'Noto Serif JP', Georgia, 'Times New Roman', serif"
				},
				{
					"name": "Monospace",
					"slug": "monospace",
					"fontFamily": "'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, monospace"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"slug": "small",
					"size": "0.875rem",
					"fluid": {
						"min": "0.8rem",
						"max": "0.875rem"
					}
				},
				{
					"name": "Medium",
					"slug": "medium",
					"size": "1rem",
					"fluid": {
						"min": "0.9rem",
						"max": "1rem"
					}
				},
				{
					"name": "Large",
					"slug": "large",
					"size": "1.25rem",
					"fluid": {
						"min": "1.1rem",
						"max": "1.25rem"
					}
				},
				{
					"name": "X-Large",
					"slug": "x-large",
					"size": "1.5rem",
					"fluid": {
						"min": "1.25rem",
						"max": "1.5rem"
					}
				},
				{
					"name": "XX-Large",
					"slug": "xx-large",
					"size": "2rem",
					"fluid": {
						"min": "1.5rem",
						"max": "2rem"
					}
				},
				{
					"name": "Huge",
					"slug": "huge",
					"size": "2.5rem",
					"fluid": {
						"min": "2rem",
						"max": "2.5rem"
					}
				}
			],
			"lineHeight": true,
			"letterSpacing": true,
			"textDecoration": true,
			"textTransform": true,
			"dropCap": true,
			"customFontSize": true
		},
		"spacing": {
			"padding": true,
			"margin": true,
			"blockGap": true,
			"units": ["px", "em", "rem", "%", "vw", "vh"],
			"spacingScale": {
				"steps": 8
			},
			"spacingSizes": [
				{
					"name": "1",
					"slug": "10",
					"size": "0.25rem"
				},
				{
					"name": "2",
					"slug": "20",
					"size": "0.5rem"
				},
				{
					"name": "3",
					"slug": "30",
					"size": "0.75rem"
				},
				{
					"name": "4",
					"slug": "40",
					"size": "1rem"
				},
				{
					"name": "5",
					"slug": "50",
					"size": "1.5rem"
				},
				{
					"name": "6",
					"slug": "60",
					"size": "2rem"
				},
				{
					"name": "7",
					"slug": "70",
					"size": "3rem"
				},
				{
					"name": "8",
					"slug": "80",
					"size": "4rem"
				}
			]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"shadow": {
			"presets": [
				{
					"name": "Small",
					"slug": "small",
					"shadow": "0 1px 2px 0 rgb(0 0 0 / 0.05)"
				},
				{
					"name": "Medium",
					"slug": "medium",
					"shadow": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)"
				},
				{
					"name": "Large",
					"slug": "large",
					"shadow": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)"
				},
				{
					"name": "X-Large",
					"slug": "x-large",
					"shadow": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
				}
			],
			"defaultPresets": true
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": true
				}
			},
			"core/pullquote": {
				"border": {
					"color": true,
					"radius": true,
					"style": true,
					"width": true
				}
			},
			"core/navigation": {
				"typography": {
					"fontSizes": true,
					"lineHeight": true
				}
			},
			"core/post-title": {
				"typography": {
					"fontSizes": true,
					"lineHeight": true,
					"letterSpacing": true
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--text)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-sans)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.8"
		},
		"spacing": {
			"padding": {
				"top": "0",
				"right": "var(--wp--preset--spacing--40)",
				"bottom": "0",
				"left": "var(--wp--preset--spacing--40)"
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--primary-dark)"
					}
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "700",
					"lineHeight": "1.4"
				},
				"color": {
					"text": "var(--wp--preset--color--text)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--huge)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"button": {
				"border": {
					"radius": "6px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "#ffffff"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--primary-dark)"
					}
				},
				"typography": {
					"fontWeight": "600"
				}
			}
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": "6px"
				},
				"typography": {
					"fontWeight": "600"
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--background-secondary)",
					"text": "#e11d48"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--monospace)",
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"border": {
					"radius": "4px"
				}
			},
			"core/preformatted": {
				"color": {
					"background": "#1e293b",
					"text": "#e2e8f0"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--monospace)"
				},
				"border": {
					"radius": "8px"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--50)",
						"right": "var(--wp--preset--spacing--50)",
						"bottom": "var(--wp--preset--spacing--50)",
						"left": "var(--wp--preset--spacing--50)"
					}
				}
			},
			"core/quote": {
				"color": {
					"background": "var(--wp--preset--color--background-secondary)"
				},
				"border": {
					"left": {
						"color": "var(--wp--preset--color--primary)",
						"style": "solid",
						"width": "4px"
					}
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--50)",
						"right": "var(--wp--preset--spacing--60)",
						"bottom": "var(--wp--preset--spacing--50)",
						"left": "var(--wp--preset--spacing--60)"
					}
				}
			},
			"core/pullquote": {
				"border": {
					"top": {
						"color": "var(--wp--preset--color--primary)",
						"style": "solid",
						"width": "4px"
					},
					"bottom": {
						"color": "var(--wp--preset--color--primary)",
						"style": "solid",
						"width": "4px"
					}
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--60)",
						"bottom": "var(--wp--preset--spacing--60)"
					}
				}
			},
			"core/separator": {
				"color": {
					"text": "var(--wp--preset--color--border)"
				},
				"border": {
					"top": {
						"width": "1px"
					}
				}
			},
			"core/table": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/image": {
				"border": {
					"radius": "8px"
				}
			},
			"core/group": {
				"border": {
					"radius": "8px"
				}
			}
		}
	}
}
